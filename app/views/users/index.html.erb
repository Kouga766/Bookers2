<main>
  <p id="notice"></p>
  <div class='container px-5 px-sm-0'>

    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <table class='table'>
          <!--<tr><img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" /></tr>-->
          <tr> <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </table>

          <div class='row'>
            <%= link_to  edit_user_path(current_user)do %>
             <p class="btn btn-outline-secondary btn-block fas fa-user-cog" > </p>
            <%end%>
          </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
       <br><%= f.submit 'Create Book', class: "btn btn-success" %></br>
        <% end %>
      </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class="table table-striped">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 30, 30,fallback: "no_image.jpg", size:'30x30' %></td>
        <td><%= user.name %></td>
        <td>
         <%= link_to "Show",user_path(user.id)%>
        </td>
      </tr>
    <%end%>

  </tbody>
</table>

    </div>
  </div>
</div>
      </main>


  </body>